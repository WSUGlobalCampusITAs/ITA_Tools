<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HTML_Sanitizer"
        xmlns:vw="clr-namespace:Calendar_Converter.View;assembly=Calendar_Converter"
        x:Class="ITATools.MainWindow"
        Title="ITA Tools" Height="600" Width="850" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF9E9E9E" Offset="0.707"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding TextView}" AcceptsReturn="True"/>
        <Button Grid.Row="1" Content="Sanitize" Command="{Binding SanitizeCommand}"/>
    </Grid>
</Window>
